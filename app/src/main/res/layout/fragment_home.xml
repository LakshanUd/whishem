                                android:layout_height="36dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="@string/more_options"
                                android:src="@drawable/ic_more_vert"
                                app:tint="#7A7A7A" />
                        </LinearLayout>

