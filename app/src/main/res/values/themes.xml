<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Wishem" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/dodgerBlue</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/skyBlue</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="colorTertiary">@color/skyBlue</item>
        <item name="colorOnTertiary">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dodgerBlue</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="Theme.Wishem" parent="Base.Theme.Wishem" />

    <style name="Theme.Wishem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Wishem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Wishem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
